upper_ru = 'АБВГДЕЖЗИЙКЛМНОПРСТУФХЦЧШЩЪЫЬЭЮЯ' 
lower_ru = 'абвгдежзийклмнопрстуфхцчшщъыьэюя'
text = 'Блажен, кто верует, тепло ему на свете!'
s = ''
for i in range(len(text)):
    if text[i].isalpha():
        if text[i] in upper_ru:
            place = upper_ru.index(text[i])
            index = (place + 10) % 32
            s += upper_ru[index]
        elif text[i] in lower_ru:
            place = lower_ru.index(text[i])
            index = (place + 10) % 32
            s += lower_ru[index]
    else:
        s += text[i]
print(s)
